<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>dll</OutputType>
		<AssemblyName>UwebSocket</AssemblyName>
		<OutputType>Library</OutputType>
    	<TargetFramework>netcoreapp3.1</TargetFramework>
		<Version>3.0.0</Version>
		<FileVersion>3.0.0.0</FileVersion>
		<AssemblyVersion>3.0.0.0</AssemblyVersion>
		<Authors>Uwe Riegel</Authors>
    	<Company>Uwe Riegel</Company>		
		<Description>WebSocket support for UwebServer</Description>
		<PackageLicenseUrl></PackageLicenseUrl>
		<PackageProjectUrl>https://github.com/uriegel/UwebSocket</PackageProjectUrl>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageTags>FSharp</PackageTags>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>  
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="Types.fs" />
    <Compile Include="Send.fs" />
    <Compile Include="Receive.fs" />
    <Compile Include="Websocket.fs" />
  </ItemGroup>
    <ItemGroup>
    	<None Include="..\LICENSE">
      		<Pack>True</Pack>
      	<PackagePath></PackagePath>
    	</None>
  	</ItemGroup>  
  <ItemGroup>
	<PackageReference Include="UwebServer" Version="4.2.2" />
  </ItemGroup>
</Project>